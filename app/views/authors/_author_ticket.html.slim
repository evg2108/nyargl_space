article.author.col-sm-6
  .panel.panel-default
    /.panel-heading # NOTE: this may used for admin abilities - links for moderation or sorting functions
    .list_item.panel-body
      .content.media
        .media-left
          = link_to author_path(author_ticket, anchor: CONTENT_SECTION) do
            = image_tag '', class: 'thumb media-object'
        .media-body
          h4.media-heading
            = link_to author_ticket.full_name, author_path(author_ticket, anchor: CONTENT_SECTION)
          span.about_author_text
            = author_ticket.in_few_words