header.row
  .col-sm-8.col-sm-offset-2
    h1.text-center= 'Настройки профиля'

article.row
  .col-sm-8.col-sm-offset-2
    .profile_navigation
      = render partial: 'profiles/navigation', object: profile_tabs

      .row
        .profile_page.col-xs-12
          = present(presenter: :panel, title: %(Внесение изменений в "#{product.title}"))
            = simple_form_for product, url: controlled_product_path(product) do |f|
              = f.input :title, label: 'Заголовок'
              = f.input :description, label: 'Описание', as: :text
              = f.button :submit, value: 'Сохранить'