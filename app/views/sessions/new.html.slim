- no_index
- content_for :end_of_head do
  = include_recaptcha_scripts

header.row
  .col-sm-12.text-center
    h1 Вход на сайт
article.row
  .col-sm-6.col-sm-offset-3.text-center
    = simple_form_for User.new, url: session_path do |f|
      = f.input :email
      = f.input :password
      .form-group
        = render partial: 'shared/recaptcha'
      .form-group
        = f.button :submit, value: t('.login')
        = link_to 'Забыли пароль?', password_regeneration_path(anchor: CONTENT_SECTION), class: 'btn btn-link', title: 'Забыл пароль? Жми сюда!', data: { toggle: 'tooltip', placement: 'auto' }, rel: 'nofollow'
